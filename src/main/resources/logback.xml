<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{dd MMM yyyy HH:mm:ss,SSS}  %-5p: %c:%L - %m%n
            </Pattern>
        </layout>
    </appender>

    <logger name="org.springframework" level="warn"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.infoblazer" level="info"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.infoblazer.gp.evolution.selectionstrategy.TournamentSelectionStrategy" level="info"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.infoblazer.gp.evolution.selectionstrategy.Compression" level="info"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.infoblazer.gp.evolution.library.AbstractLibrary" level="info"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.infoblazer.gp.application.fitness.StockHistoryFitnessEvaluator" level="trace"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.infoblazer.gp.evolution.geneticprogram.ProfitProgram" level="trace"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="com.infoblazer.gp.evolution.geneticprogram.AbstractGeneticProgram" level="info"
            additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>